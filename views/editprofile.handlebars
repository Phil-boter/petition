<div class="petition">
    <img class="top-img" src="dolde2.png" alt="hops">
    <p>
        If you want you can change your profile here
    </p>
    {{#if error}}
    <div class="error">Oops... Sorry! Something went wrong!</div>
    {{/if}}
</div>
<div class="container">
    <form method="POST">
        {{#arrData}}
        <div class="row">
            <p>First Name</p>
            <input type="text" name="first" value="{{first}}">
        </div>
        <div class="row">
            <p>Last Name</p>
            <input type="text" name="last" value="{{last}}">
        </div>
        <div class="row">
            <p>Email</p>
            <input type="email" name="email" value="{{email}}">
        </div>
        <div class="row">
            <p>Password</p>
            <input type="password" name="password" value="">
        </div>
        <div class="row">
            <p>Age</p>
            <input type="text" name="age" value="{{age}}">
        </div>
        <div class="row">
            <p>City</p>
            <input type="text" name="city" value="{{city}}">
        </div>
        <div class="row">
            <p>Homepage</p>
            <input type="text" name="url" value="{{url}}">
        </div>
        {{/arrData}}

        <input type="hidden" name="_csrf" value="{{csrfToken}}">

        <button type="submit" name="submit">Update</button>

    </form>
</div>